div.container.content
  div.row
    div.col-lg-3
      #sidebar.hidden-md(data-spy="affix",data-offset-top="0")
        h4.text-right  Service
        ul.text-right.list-unstyled
          for arbeitsweise in arbeitsweisen
            li
              a(href='##{arbeitsweise.anchor}') #{arbeitsweise.name}
    .col-lg-9
      for arbeitsweise in arbeitsweisen
        a(id='#{arbeitsweise.anchor}')
        .panel.panel-kompedent
          .panel-heading
            h2
              strong #{arbeitsweise.name}
          .panel-body
            img.img-responsive(src=arbeitsweise.bild)
          .panel-footer
            p= arbeitsweise.beschreibung
